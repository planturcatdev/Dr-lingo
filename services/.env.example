
# Django Settings

SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1


# Database Configuration (PostgreSQL via Docker)

# Matches docker-compose.yml settings
DATABASE_URL=postgresql://dr-lingo_user:dr-lingo_pass@localhost:5435/dr-lingo_db


# CORS Settings

CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173


# AI Provider Settings


# AI Provider: "gemini" (cloud) or "ollama" (local)
AI_PROVIDER=gemini

# Gemini AI API Key (for cloud AI)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Ollama Settings (for local AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TRANSLATION_MODEL=granite:latest
OLLAMA_EMBEDDING_MODEL=nomic-embed-text:latest


# Redis Cache Settings

# Used for: Translation caching, RAG query caching, session storage
# Port 6380 matches docker-compose.yml (mapped from container's 6379)
REDIS_URL=redis://localhost:6380/1


# Celery Task Queue Settings

# Used for: Background tasks (audio transcription, RAG processing, etc.)
CELERY_BROKER_URL=redis://localhost:6380/0
CELERY_RESULT_BACKEND=redis://localhost:6380/0


# RabbitMQ Event Bus Settings

# Used for: Event-driven communication between services
# Port 5673 matches docker-compose.yml (mapped from container's 5672)
# Management UI available at http://localhost:15672 (guest/guest)
RABBITMQ_URL=amqp://guest:guest@localhost:5673/


# Whisper API (for Ollama audio transcription)

# Only needed if using Ollama and want local transcription
WHISPER_API_URL=http://localhost:9000
